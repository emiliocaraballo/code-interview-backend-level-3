{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"] 
      },
      "target": "es2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "rootDir": ".",
      "outDir": "dist"
    },
    "include": ["src/**/*", "e2e/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  